{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "release": "lerna publish --conventional-commits -m 'chore: publish'",
    "lint": "eslint --ext .js,.jsx packages/*/src/",
    "build": "lerna run build",
    "watch": "lerna exec --parallel --ignore \"*-example\" -- yarn run watch -- --no-spinner",
    "preversion": "yarn run lint && lerna run build && pob-repository-check-clean",
    "postcheckout": "./git-hooks/post-checkout",
    "postmerge": "./git-hooks/post-merge",
    "precommit": "./git-hooks/pre-commit",
    "preparecommitmsg": "./git-hooks/prepare-commit-msg ${GIT_PARAMS}"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^4.5.0",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-config-pob": "^16.0.4",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^2.2.0",
    "husky": "^0.14.3",
    "komet": "^0.1.4",
    "komet-karma": "^0.2.5",
    "lerna": "^2.1.0",
    "pob-release": "^3.1.0",
    "prettier": "^1.5.3"
  }
}
