{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "publish": "lerna publish --conventional-commits --ignore example -m 'chore: publish'",
    "lint": "eslint --ext .js,.jsx packages/*/src/",
    "build": "lerna run build",
    "watch": "lerna exec --parallel --ignore example -- yarn run watch -- --no-spinner",
    "preversion": "yarn run lint && lerna run build && pob-repository-check-clean",
    "postcheckout": "./git-hooks/post-checkout",
    "postmerge": "./git-hooks/post-merge",
    "precommit": "./git-hooks/pre-commit",
    "preparecommitmsg": "./git-hooks/prepare-commit-msg ${GIT_PARAMS}",
    "postinstall": "pob-repository-check-clean && lerna bootstrap || echo"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^4.3.0",
    "eslint-config-airbnb-base": "^11.3.0",
    "eslint-config-pob": "^14.1.1",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^2.1.2",
    "husky": "^0.14.3",
    "komet": "^0.1.4",
    "komet-karma": "^0.2.5",
    "lerna": "^2.0.0",
    "pob-release": "^3.1.0",
    "prettier": "^1.5.3"
  }
}
