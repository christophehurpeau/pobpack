{
  "name": "pobpack",
  "private": true,
  "version": "0.0.0",
  "description": "Build projects with webpack.",
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": "https://github.com/christophehurpeau/pobpack.git",
  "homepage": "https://github.com/christophehurpeau/pobpack",
  "engines": {
    "node": ">=12.10.0"
  },
  "lerna": {
    "version": "independent",
    "npmClient": "yarn",
    "useWorkspaces": true,
    "command": {
      "publish": {
        "npmClient": "npm",
        "ignoreChanges": [
          "**/.yo-rc.json",
          "**/.eslintrc.json",
          "**/tsconfig.json",
          "**/tsconfig.build.json"
        ]
      }
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run --stream build && yarn run build:definitions",
    "build:definitions": "tsc -b tsconfig.build.json",
    "lint": "yarn run lint:prettier && yarn run lint:eslint",
    "lint:eslint": "lerna run --stream lint",
    "lint:prettier": "prettier --check .",
    "preversion": "yarn run lint:prettier && yarn run lint:eslint --since && yarn run build && repository-check-dirty",
    "release": "cross-env GH_TOKEN=$POB_GITHUB_TOKEN lerna version --conventional-commits --conventional-graduate --create-release=github -m 'chore: release' && lerna publish from-git",
    "tsc": "tsc -b",
    "watch": "lerna run --parallel --ignore \"*-example\" watch"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": [
      "@pob/commitlint-config"
    ]
  },
  "devDependencies": {
    "@pob/commitlint-config": "2.0.1",
    "@pob/eslint-config": "41.0.4",
    "@pob/eslint-config-node": "41.0.4",
    "@pob/lerna-light": "3.23.0",
    "@pob/root": "3.0.1",
    "@typescript-eslint/eslint-plugin": "4.7.0",
    "@typescript-eslint/parser": "4.7.0",
    "eslint": "7.13.0",
    "eslint-import-resolver-node": "0.3.4",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-unicorn": "23.0.0",
    "husky": "4.3.0",
    "prettier": "2.1.2",
    "typescript": "4.0.5"
  }
}
