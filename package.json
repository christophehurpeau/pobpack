{
  "name": "pobpack",
  "private": true,
  "version": "0.0.0",
  "description": "Build projects with webpack.",
  "keywords": [],
  "author":
    "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": "git@github.com:christophehurpeau/pobpack.git",
  "homepage": "https://github.com/christophehurpeau/pobpack",
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "lerna run build --ignore \"*-example\"",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "lint": "lerna run lint",
    "postcheckout": "yarnhook",
    "postmerge": "yarnhook",
    "postrewrite": "yarnhook",
    "precommit": "lint-staged",
    "preversion":
      "yarn run lint && lerna run build && pob-repository-check-clean",
    "release": "lerna publish --conventional-commits -m 'chore: publish'",
    "watch":
      "lerna exec --parallel --ignore \"*-example\" -- yarn run watch -- --no-spinner"
  },
  "lint-staged": {
    "{README.md,package.json,packages/*/package.json,packages/*/README.md,,.eslintrc.json}": [
      "prettier --write",
      "git add"
    ],
    "packages/*/lib/**/*.json": ["prettier --write", "git add"],
    "packages/*/lib/**/*.js": ["eslint --fix --quiet", "git add"]
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "husky": "^0.14.3",
    "lerna": "2.9.0",
    "lint-staged": "^7.0.0",
    "pob-release": "^3.1.0",
    "yarnhook": "^0.1.1"
  }
}
