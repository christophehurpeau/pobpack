{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "createDefaultProgram": true
  },
  "plugins": ["@typescript-eslint"],
  "extends": ["@pob/eslint-config-typescript"],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["./node_modules", "./src"]
      }
    }
  },
  "ignorePatterns": ["*.d.ts"]
}
