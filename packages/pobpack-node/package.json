{
  "name": "pobpack-node",
  "version": "9.0.0",
  "description": "Build and run node projects with webpack.",
  "keywords": [],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/christophehurpeau/pobpack.git",
    "directory": "packages/pobpack-node"
  },
  "homepage": "https://github.com/christophehurpeau/pobpack",
  "engines": {
    "node": ">=12.10.0"
  },
  "main": "./index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "node": {
        "development": {
          "import": "./dist/index-node12-dev.mjs",
          "require": "./dist/index-node12-dev.cjs.js"
        },
        "import": "./dist/index-node12.mjs",
        "require": "./dist/index-node12.cjs.js"
      }
    },
    "./cli": {
      "node": {
        "development": {
          "import": "./dist/cli-node12-dev.mjs",
          "require": "./dist/cli-node12-dev.cjs.js"
        },
        "import": "./dist/cli-node12.mjs",
        "require": "./dist/cli-node12.cjs.js"
      }
    }
  },
  "sideEffects": false,
  "bin": {
    "pobpack-node": "./pobpack-node"
  },
  "scripts": {
    "build": "pob-build && yarn run build:definitions",
    "build:definitions": "tsc -p tsconfig.build.json",
    "clean": "rm -Rf docs dist test/node6 coverage",
    "lint:eslint": "eslint --ext .js,.ts --report-unused-disable-directives --quiet *.js src",
    "watch": "pob-watch"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "pob": {
    "babelEnvs": [
      {
        "target": "node",
        "version": "12",
        "formats": [
          "cjs",
          "es"
        ]
      }
    ],
    "entries": [
      "index",
      "cli"
    ]
  },
  "peerDependencies": {
    "webpack": "^4.44.2 || ^5.0.0"
  },
  "dependencies": {
    "babel-preset-latest-node": "^4.0.1",
    "debounce": "^1.2.0",
    "pobpack-types": "^4.1.2",
    "pobpack-utils": "^9.0.0",
    "source-map-support": "^0.5.16",
    "springbokjs-daemon": "^5.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "devDependencies": {
    "@babel/core": "7.12.3",
    "@pob/eslint-config": "41.0.4",
    "@pob/eslint-config-node": "41.0.4",
    "@pob/eslint-config-typescript": "41.0.4",
    "@pob/eslint-config-typescript-node": "41.0.4",
    "@types/debounce": "1.2.0",
    "@types/webpack-node-externals": "1.7.0",
    "@typescript-eslint/eslint-plugin": "4.7.0",
    "@typescript-eslint/parser": "4.7.0",
    "eslint": "7.13.0",
    "eslint-import-resolver-node": "0.3.4",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-unicorn": "23.0.0",
    "pob-babel": "26.0.1",
    "prettier": "2.1.2",
    "rollup": "2.33.2"
  }
}
